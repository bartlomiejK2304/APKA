<UserControl x:Class="APKA.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:APKA"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

    <Grid Background="#F0F2F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Viewbox Grid.Row="0" Margin="0,40,0,0" Stretch="Uniform">
            <StackPanel Orientation="Horizontal">
                <Image Source="/APKA;component/LOGO.png"
       Width="60"
       Height="60"
       Margin="0,0,0,10"/>
                <TextBlock Text="DZIENNICZEK"
                           Foreground="#FF1B2897" 
                           FontFamily="Yu Gothic UI Semibold" 
                           VerticalAlignment="Center"
                           FontWeight="Bold"
                           Margin="0,0,0,10" FontSize="18"/>
                
            </StackPanel>
        </Viewbox>

        <Border Grid.Row="1" 
                Background="White"
                BorderThickness="0" 
                CornerRadius="20" 
                Padding="40,30" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Top" 
                Width="450" 
                Height="Auto">

            <Border.Effect>
                <DropShadowEffect BlurRadius="25" ShadowDepth="2" Opacity="0.1"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock Text="Logowanie" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="#FF1B2897" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,30"/>

                <TextBlock Text="LOGIN" Foreground="Gray" FontSize="11" FontWeight="Bold" Margin="0,0,0,5"/>
                <Border BorderBrush="#FF1D1AFF" BorderThickness="0,0,0,1" Margin="0,0,0,20">
                    <TextBox x:Name="LoginBox" 
                             BorderThickness="0" 
                             Background="Transparent" 
                             FontSize="16" 
                             Padding="5"
                             VerticalContentAlignment="Center"/>
                </Border>

                <TextBlock Text="HASŁO" Foreground="Gray" FontSize="11" FontWeight="Bold" Margin="0,10,0,5"/>
                <Border BorderBrush="#FF1D1AFF" BorderThickness="0,0,0,1" Margin="0,0,0,30">
                    <PasswordBox x:Name="PasswordBox" 
                                 BorderThickness="0" 
                                 Background="Transparent" 
                                 FontSize="16" 
                                 Padding="5"
                                 VerticalContentAlignment="Center"/>
                </Border>

                <Button x:Name="BtnLogin" 
                        Content="ZALOGUJ" 
                        Click="BtnLogin_Click"
                        Height="50" 
                        Background="#FF1D1AFF" 
                        Foreground="White" 
                        FontWeight="Bold" 
                        FontSize="14"
                        Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="25"/>
                        </Style>
                    </Button.Resources>
                    <Button.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                    </Button.Effect>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>