<UserControl x:Class="APKA.Dzienniczek"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:APKA"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="#FF07123C">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- GÓRNY PASEK -->
        <Border Grid.Row="0" Background="#FF07123C">

            <Grid Margin="20,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <TextBlock Text="Zalogowano jako: " Foreground="Gray" VerticalAlignment="Center"/>
                    <TextBlock x:Name="UserDisplay" Text="" Foreground="#FFFF0C00" FontWeight="Bold" VerticalAlignment="Center" Margin="5,0,0,0"/>
                    <Button Content="Wyloguj" Margin="15,0,0,0" Padding="10,2"
                            Background="White" Foreground="#FF060606"
                            BorderBrush="#FFFF0C00" Click="Logout_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <Border x:Name="PanelPowitanie" Grid.Row="1" Background="#FF0E34B4">
            <TextBlock Text="Witaj w Dzienniczku !!!"
               Foreground="White"
               FontSize="36"
               FontWeight="Bold"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"/>
        </Border>

        <!-- GŁÓWNY OBSZAR -->
        <Grid Grid.Row="2">
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFC3C1C1"/>
                    <GradientStop Color="White" Offset="0.077"/>
                </LinearGradientBrush>
            </Grid.Background>

            <!-- MENU -->
            <Grid x:Name="PanelMenu" Visibility="Hidden">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="btnOcenyMenu" Grid.Column="0" Width="220" Height="220" Margin="15"
                        Background="#2ECC71" Foreground="White" BorderThickness="0"
                        Click="MenuButton_Click">
                    <StackPanel>
                        <TextBlock Text="&#xE82D;" FontFamily="Segoe MDL2 Assets"
                                   FontSize="50" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                        <TextBlock Text="Oceny" FontSize="20" FontWeight="Bold"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button x:Name="btnUwagiMenu" Grid.Column="1" Width="220" Height="220" Margin="15"
                        Background="#FFD7921F" Foreground="White" BorderThickness="0"
                        Click="MenuButton_Click">
                    <StackPanel>
                        <TextBlock Text="&#xE7BA;" FontFamily="Segoe MDL2 Assets"
                                   FontSize="50" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                        <TextBlock Text="Uwagi" FontSize="20" FontWeight="Bold"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button x:Name="btnSprawdzianyMenu" Grid.Column="2" Width="220" Height="220" Margin="15"
                        Background="#FF962ECC" Foreground="White" BorderThickness="0"
                        Click="MenuButton_Click">
                    <StackPanel>
                        <TextBlock Text="&#xE70F;" FontFamily="Segoe MDL2 Assets"
                                   FontSize="50" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                        <TextBlock Text="Sprawdziany" FontSize="20" FontWeight="Bold"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Grid>

            <!-- WIDOK OCEN -->
            <StackPanel x:Name="WidokOceny" Visibility="Visible" VerticalAlignment="Stretch">
                <Grid Height="314">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="2*"/>

                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Orientation="Vertical" Margin="20">
                        <Button Content="← Powrót do menu" Margin="10" Click="BackToMenu_Click" Padding="10,5"/>
                        <TextBlock Text="Wybierz klase" Margin="20,10,10,2"/>
                        <ComboBox Name="klasy_wybor" HorizontalAlignment="Left" Margin="20,0,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="Klasa_SelectionChanged_1" IsReadOnly="True" />
                        <TextBlock Text="Wybierz Ucznia" Margin="20,0,0,2"/>
                        <ComboBox Name="Uczniowie" HorizontalAlignment="Left" Margin="20,0,0,0" VerticalAlignment="Top" Width="120"/>
                        <TextBlock Margin="20,0,0,2"><Run Text="Wybierz"/><Run Language="pl-pl" Text=" Przedmiot"/><Run Text=" "/></TextBlock>
                        <ComboBox Name="Przedmiot"  HorizontalAlignment="Left" Margin="20,0,0,0" VerticalAlignment="Top" Width="120"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                        <TextBox TextWrapping="Wrap" HorizontalAlignment="Center" Text="Wybierz Ocene:" Width="120" Margin="0,30,10,10" TextChanged="TextBox_TextChanged_1" Background="#FFDDDDDD" BorderBrush="Black" TextAlignment="Center" />
                        <StackPanel Orientation="Horizontal">
                            <ListBox x:Name="Oceny" Width="417" Height="72" SelectionChanged="Oceny_SelectionChanged" Background="{x:Null}" BorderBrush="{x:Null}">
                                <ListBoxItem Content="1" Background="#FF4D4D" Foreground="White" FontWeight="Bold" Margin="2"/>
                                <ListBoxItem Content="2" Background="#FF8C4D" Foreground="White" Margin="2"/>
                                <ListBoxItem Content="3" Background="#FFD44D" Foreground="Black" Margin="2"/>
                                <ListBoxItem Content="4" Background="#D4FF4D" Foreground="Black" Margin="2"/>
                                <ListBoxItem Content="5" Background="#4DFF4D" Foreground="Black" Margin="2"/>
                                <ListBoxItem Content="6" Background="#2ECC71" Foreground="White" FontWeight="Bold" Margin="2"/>
                            </ListBox>
                          


                        </StackPanel>
                        <Button Content="Dodaj Ocene" Margin="20" Click="Ocena_Add_Click" />



                    </StackPanel>
                </Grid>

            </StackPanel>

            <!-- WIDOK UCZNIÓW + UWAGI -->
            <StackPanel x:Name="WidokStudenci" Visibility="Collapsed" VerticalAlignment="Stretch" Margin="20">

                <Button Content="← Powrót do menu" Margin="10"
                        Click="BackToMenu_Click" Padding="10,5"/>

                <TextBlock Text="LISTA UCZNIÓW"
                           Foreground="#FF07123C"
                           HorizontalAlignment="Center"
                           FontSize="24"
                           Margin="20"
                           FontWeight="Bold"/>

                <!-- WYBÓR KLASY -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                    <TextBlock Text="Wybierz klasę:" FontWeight="Bold" Margin="0,0,10,0"/>
                    <ComboBox x:Name="ComboKlasa" Width="120"
                              SelectionChanged="ComboKlasa_SelectionChanged">
                        <ComboBoxItem Content="1A"/>
                        <ComboBoxItem Content="1B"/>
                        <ComboBoxItem Content="2A"/>
                    </ComboBox>
                </StackPanel>

                <!-- LISTA UCZNIÓW -->
                <ListView x:Name="ListaUczniow" Height="200" Margin="10">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Imię" DisplayMemberBinding="{Binding Imie}" Width="120"/>
                            <GridViewColumn Header="Nazwisko" DisplayMemberBinding="{Binding Nazwisko}" Width="150"/>
                            <GridViewColumn Header="Klasa" DisplayMemberBinding="{Binding NazwaKlasy}" Width="80"/>
                        </GridView>
                    </ListView.View>
                </ListView>

                <!-- BRAK UCZNIÓW -->
                <TextBlock x:Name="BrakUczniowText"
                           Text="Brak uczniów w tej klasie"
                           Foreground="Red"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Visibility="Collapsed"
                           Margin="10"/>

                <!-- PANEL DODAWANIA UWAGI -->
                <Border BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="10">
                    <StackPanel>

                        <StackPanel>
                            <TextBlock Text="Typ uwagi:" FontWeight="Bold" Margin="0,0,0,5"/>
                            <ComboBox x:Name="ComboTypUwagi" Width="120" HorizontalAlignment="Left" Margin="0,5">
                                <ComboBoxItem Content="Pozytywna" Tag="Pozytywna"/>
                                <ComboBoxItem Content="Negatywna" Tag="Negatywna"/>
                            </ComboBox>
                        </StackPanel>

                        <TextBox x:Name="TxtUwaga"
                                 Height="60"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 Margin="0,5"/>

                        <Button Content="Dodaj uwagę"
                                Width="120"
                                HorizontalAlignment="Left"
                                Click="BtnDodajUwage_Click"/>
                    </StackPanel>
                </Border>

            </StackPanel>

            <StackPanel x:Name="WidokSprawdziany" Visibility="Collapsed" VerticalAlignment="Stretch" Margin="20">

                <Button Content="← Powrót do menu"
            Margin="10"
            Click="BackToMenu_Click"
            Padding="10,5"/>

                <TextBlock Text="SPRAWDZIANY – WYBÓR KLASY"
               Foreground="#FF07123C"
               HorizontalAlignment="Center"
               FontSize="24"
               Margin="20"
               FontWeight="Bold"/>

                <!-- WYBÓR KLASY -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                    <TextBlock Text="Wybierz klasę:"
                   FontWeight="Bold"
                   Margin="0,0,10,0"/>

                    <ComboBox x:Name="ComboKlasaSprawdziany" Width="120">
                        <ComboBoxItem Content="1A"/>
                        <ComboBoxItem Content="1B"/>
                        <ComboBoxItem Content="2A"/>
                    </ComboBox>
                </StackPanel>

                <!-- WYBÓR DATY -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                    <TextBlock Text="Data sprawdzianu:"
                   FontWeight="Bold"
                   Margin="0,0,10,0"/>

                    <DatePicker x:Name="DateSprawdzian" Width="150"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                    <TextBlock Text="Typ sprawdzianu:"
               FontWeight="Bold"
               Margin="0,0,10,0"/>
                    <ComboBox x:Name="ComboTypSprawdzianu" Width="150">
                        <ComboBoxItem Content="Sprawdzian" Tag="Sprawdzian"/>
                        <ComboBoxItem Content="Kartkówka" Tag="Kartkowka"/>
                        <ComboBoxItem Content="Aktywność" Tag="Aktywnosc"/>
                        <ComboBoxItem Content="Projekt" Tag="Projekt"/>
                        <ComboBoxItem Content="Odpowiedz" Tag="Odpowiedz"/>
                    </ComboBox>
                </StackPanel>

                <!-- PRZYCISK -->
                <Button Content="Dodaj sprawdzian"
            Width="180"
            Height="40"
            Margin="20"
            HorizontalAlignment="Center"
            Click="BtnDodajSprawdzian_Click"/>

            </StackPanel>


        </Grid>
    </Grid>
</UserControl>
