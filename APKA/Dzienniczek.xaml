<UserControl x:Class="APKA.Dzienniczek"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:APKA"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#FF07123C" BorderBrush="White" BorderThickness="0,0,0,2">
            <Grid Margin="20,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <TextBlock Text="Zalogowano jako: " Foreground="Gray" VerticalAlignment="Center"/>
                    <TextBlock x:Name="UserDisplay" Text="Jan Kowalski" Foreground="#FFFF0C00" FontWeight="Bold" VerticalAlignment="Center" Margin="5,0,0,0"/>
                    <Button Content="Wyloguj" Margin="15,0,0,0" Padding="10,2" Background="White" Foreground="#FF060606" BorderBrush="#FFFF0C00" Click="Logout_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="1" BorderBrush="White" BorderThickness="0,0,0,2" Background="#FF0E34B4">
            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="Klasa" Grid.Column="0" Text="Klasa" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White" FontSize="48" FontWeight="Bold"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="btnPoprzedni" Content="◀" Click="btnPoprzedni_Click" Width="40" Height="40" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White"/>
                    <Border BorderThickness="1" BorderBrush="#FFCDAB1B" Margin="10,0" Width="100" Height="40">
                        <TextBlock x:Name="txtAktualnyStudent" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="16" Foreground="White" Text="Uczeń" FontWeight="Bold"/>
                    </Border>
                    <Button x:Name="btnNastepny" Content="▶" Click="btnNastepny_Click" Width="40" Height="40" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White"/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="2">
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFC3C1C1"/>
                    <GradientStop Color="White" Offset="0.077"/>
                </LinearGradientBrush>
            </Grid.Background>

            <Grid x:Name="PanelMenu" Visibility="Visible">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="btnOcenyMenu" Grid.Column="0" Width="220" Height="220" Margin="15" 
                        Background="#2ECC71" Foreground="White" BorderThickness="0" Click="MenuButton_Click">
                    <Button.Effect>
                        <DropShadowEffect BlurRadius="10" Opacity="0.3" ShadowDepth="3"/>
                    </Button.Effect>
                    <StackPanel>
                        <TextBlock Text="&#xE82D;" FontFamily="Segoe MDL2 Assets" FontSize="50" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                        <TextBlock Text="Oceny" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button x:Name="btnUwagiMenu" Grid.Column="1" Width="220" Height="220" Margin="15" 
                        Background="#FFD7921F" Foreground="White" BorderThickness="0" Click="MenuButton_Click">
                    <Button.Effect>
                        <DropShadowEffect BlurRadius="10" Opacity="0.3" ShadowDepth="3"/>
                    </Button.Effect>
                    <StackPanel>
                        <TextBlock Text="&#xE7BA;" FontFamily="Segoe MDL2 Assets" FontSize="50" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                        <TextBlock Text="Uwagi" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button x:Name="btnSprawdzianyMenu" Grid.Column="2" Width="220" Height="220" Margin="15" 
                        Background="#FF962ECC" Foreground="White" BorderThickness="0" Click="MenuButton_Click">
                    <Button.Effect>
                        <DropShadowEffect BlurRadius="10" Opacity="0.3" ShadowDepth="3"/>
                    </Button.Effect>
                    <StackPanel>
                        <TextBlock Text="&#xE70F;" FontFamily="Segoe MDL2 Assets" FontSize="50" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                        <TextBlock Text="Sprawdziany" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Grid>

            <StackPanel x:Name="WidokOceny" Visibility="Collapsed" VerticalAlignment="Stretch">
                <Button Content="← Powrót do menu" HorizontalAlignment="Left" Margin="10" Click="BackToMenu_Click" Padding="10,5"/>
                <TextBlock Text="TABELA OCEN" Foreground="#FF07123C" HorizontalAlignment="Center" FontSize="24" Margin="20" FontWeight="Bold"/>
            </StackPanel>

            <StackPanel x:Name="WidokStudenci" Visibility="Collapsed" VerticalAlignment="Stretch">
                <Button Content="← Powrót do menu" HorizontalAlignment="Left" Margin="10" Click="BackToMenu_Click" Padding="10,5"/>
                <TextBlock Text="LISTA STUDENTÓW / UWAGI" Foreground="#FF07123C" HorizontalAlignment="Center" FontSize="24" Margin="20" FontWeight="Bold"/>
            </StackPanel>

        </Grid>
    </Grid>
</UserControl>